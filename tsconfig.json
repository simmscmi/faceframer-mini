{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "exclude": ["node_modules"]
}
